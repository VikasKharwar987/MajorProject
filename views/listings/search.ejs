<div class="row mt-3">
<h2 class="mb-3">Showing Listings for <%= query %></h2>
  <% for(let listings of search){ %>
    <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
      <a href="/listings/<%= listings.id %>" class="listing-list" style="text-decoration: none;">
        <div class="card listing-card h-100">
          <img src="<%= listings.image.url %>" class="card-img-top" alt="Listing image" style="height: 20rem;">
          <div class="card-body">
            <p class="card-text">
              <b><%= listings.title %></b><br/>
              &#8377; <%= listings.price.toLocaleString("en-IN") %> / night
            </p>
          </div>
